{
  "$schema": "http://json-schema.org/draft-04/schema#",
	"title": "announcement",
  "description": "A bundle of STIX content not explicitly solicited by another party.",
	"type": "object",
  "allOf": [
    {"$ref": "message-base.json"},
    {
      "properties": {
        "contents": {
          "type": "array",
